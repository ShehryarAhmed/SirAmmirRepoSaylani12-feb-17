<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data class="MyActivityBinding" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.saylani.databindingsample.MainActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/colorPrimary" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Simple Edit Text"/>
        
        <android.support.design.widget.TextInputLayout
            android:id="@+id/til"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Material Edit Text"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/simpleToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Simple Toast"/>
        <Button
            android:id="@+id/materialToast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Material Toast"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/myRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</layout>
